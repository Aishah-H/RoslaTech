@model RoslaTechs.Models.Consultation
@{
}

<div class="container">
    <h1>Consultation</h1>
    <p>Welcome to the consultation page. Here you can book a consultation.</p>
    
    <form asp-controller="Home" asp-action="BookConsultation" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input type="date" class="form-control" id="date" name="date" required>
        </div>
        <button type="submit" class="btn btn-primary">Book Consultation</button>
    </form>
</div>
